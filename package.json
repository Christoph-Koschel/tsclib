{
    "name": "tsc-core-lib",
    "version": "1.0.0",
    "description": "Library that enhance the development experience when working with TypeScript projects.",
    "main": "lib/main/index.js",
    "typings": "lib/main/index.d.ts",
    "module": "lib/module/index.js",
    "repository": "https://github.com/Christoph-Koschel/tsclib.git",
    "author": "Christoph Koschel",
    "license": "MIT",
    "keywords": [
        "TypeScript",
        "library",
        "utilities",
        "development",
        "essential",
        "tools"
    ],
    "scripts": {
        "build": "run-p build:*",
        "build:main": "tsc -p tsconfig.json",
        "build:module": "tsc -p tsconfig.module.json",

        "test": "run-s build test:*",
        "test:unit": "nyc --silent ava",
        "watch:build": "tsc -p tsconfig.json -w",
        "watch:test": "nyc --silent ava --watch",

        "cov": "run-s build test:unit cov:html cov:lcov && open-cli coverage/index.html",
        "cov:html": "nyc report --reporter=html",
        "cov:lcov": "nyc report --reporter=lcov",
        "cov:send": "run-s cov:lcov && codecov",
        "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",

        "doc": "run-s doc:html && open-cli lib/docs/index.html",
        "doc:html": "typedoc src/ --exclude **/*.spec.ts --out lib/docs",
        "doc:json": "typedoc src/ --exclude **/*.spec.ts --json lib/docs/typedoc.json"
    },
    "devDependencies": {
        "@ava/typescript": "^3.0.1",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "ava": "^5.2.0",
        "codecov": "^3.8.3",
        "husky": "^8.0.3",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "open-cli": "^7.0.1",
        "ts-node": "^10.9.1",
        "typedoc": "^0.23.10",
        "typescript": "^4.9.5"
    },
    "files": [
        "lib/main",
        "lib/module",
        "!**/*.spec.*",
        "!**/*.json",
        "CHANGELOG.md",
        "LICENSE",
        "README.md"
    ],
    "ava": {
        "failFast": true,
        "timeout": "60s",
        "typescript": {
            "rewritePaths": {
                "src/": "lib/main/"
            },
            "compile": false
        },
        "files": [
            "!lib/module/**"
        ]
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "exclude": [
            "**/*.spec.js"
        ]
    }
}
